  <script>
    // Handle form submission - Redirect to wrapped page
    document.querySelector('.search-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const gameName = (document.getElementById('gameName') as HTMLInputElement).value;
      const tagLine = (document.getElementById('tagLine') as HTMLInputElement).value;
      
      if (!gameName || !tagLine) {
        alert('Please enter your summoner name and tag');
        return;
      }
      
      // Redirect to wrapped page with query parameter
      const playerParam = `${encodeURIComponent(gameName)}-${encodeURIComponent(tagLine)}`;
      window.location.href = `/wrapped?player=${playerParam}`;
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', (e) => {
        e.preventDefault();
        const href = anchor.getAttribute('href');
        const target = document.querySelector(href || '');
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
  </script>
